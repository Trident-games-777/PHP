<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="8dp"/>
            <stroke
                android:color="@color/spin_stroke"
                android:width="2dp"/>
            <gradient
                android:angle="45"
                android:endColor="@color/spin_end_grad"
                android:gradientRadius="65sp"
                android:startColor="@color/spin_start_grad"
                android:type="linear" />
            <size android:width="100sp"
                android:height="100sp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="8dp"/>
            <stroke
                android:color="@color/spin_stroke"
                android:width="2dp"/>
            <gradient
                android:angle="45"
                android:endColor="@color/spin_pressed_end_grad"
                android:gradientRadius="65sp"
                android:startColor="@color/white"
                android:type="linear" />
            <size android:width="100sp"
                android:height="100sp" />
        </shape>
    </item>
</selector>